pipeline {
	agent none
		
	

	stages {
		stage ('Build') {
                  agent {
                    kubernetes {
                      label "kubeagent"
                      defaultContainer 'jnlp'
                      yamlFile ".jenkins/build-pod.yaml"
                     }
                 }
                  steps {
                    container('maven') {
		       maven(command: "-B clean deploy")
		      }
		   
		  }
             }
	 }
   }
